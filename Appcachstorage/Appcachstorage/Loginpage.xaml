<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             x:Class="Appcachstorage.Loginpage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Login page" FontSize="Medium" HorizontalTextAlignment="Center"></Label>

                <Entry x:Name="userNameEntry" Placeholder="Enter Name"></Entry>
                <Entry x:Name="passwordEntry" Placeholder="Enter Password"></Entry>

                <controls:CheckBox DefaultText="Save Username" x:Name="Checkbox" Checked="False" HorizontalOptions="Fill"/>
                <Button x:Name="btnStore" Text="Store"></Button>

            </StackLayout>

 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>